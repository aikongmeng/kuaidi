<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/click_to_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/popup_bg">
        <LinearLayout
            android:id="@+id/popup_anima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:background="@android:color/white">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_searchview_return"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_return_left"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <com.kuaibao.skuaidi.activity.view.ClearEditText
                        android:id="@+id/et_searchview_input"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="输入地点"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:singleLine="true"
                        android:textColor="@color/gray_1"
                        android:textColorHint="@color/gray_3"
                        android:textSize="16sp"
                        android:inputType="text"
                        android:drawableLeft="@drawable/icon_search_map"
                        android:drawablePadding="4dp"
                        android:background="@drawable/shape_white2"
                        android:layout_marginRight="10dp"
                        android:longClickable="false"/>
                    <LinearLayout
                        android:id="@+id/ll_searchview_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="0.5dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="搜索"
                        android:textSize="16sp"
                        android:textColor="@color/title_bg"
                        android:padding="15dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_line" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>