<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    <ImageView 
        android:id="@+id/iv_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_user_order" 
        />
    <TextView 
        android:id="@+id/tv_phone_number"
        android:layout_toRightOf="@id/iv_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18648406631"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:textColor="@color/gray_1"
        android:textSize="16sp" 
        />
    
     <TextView 
        android:id="@+id/tv_message_lately"
        android:layout_below="@id/tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_phone_number"
        android:text="最近可好？"
        android:textColor="@color/gray_3"
        android:textSize="14sp"
        android:singleLine="true"
        />
     
     <TextView 
         android:id="@+id/tv_time"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:singleLine="true"
         android:text="12:35"
         android:layout_alignParentRight="true"
         android:textColor="@color/text_sender_adress"
         android:textSize="12sp"
         
         />

</RelativeLayout>
