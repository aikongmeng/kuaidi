<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_order_nofind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/rl_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/iv_order_notfind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_xinhao" />

            <RelativeLayout
                android:id="@+id/rl_order_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_order_notfind"
                android:paddingLeft="30dip"
                android:paddingRight="30dip" >

                <TextView
                    android:id="@+id/tv_order_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dip"
                    android:text="@string/network_no"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_order_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_order_desc"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dip"
                    android:text="@string/network_no_" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_net_reload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_order_"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dip"
                android:background="@drawable/selector_button_green_all"
                android:clickable="true"
                android:gravity="center"
                android:onClick="inviteColleague"
                android:paddingBottom="10dip"
                android:paddingLeft="40dip"
                android:paddingRight="40dip"
                android:paddingTop="10dip"
                android:text="@string/network_no_add"
                android:textColor="@drawable/selector_button_green_text"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>