<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_5"
    tools:context="com.kuaibao.skuaidi.personal.personinfo.ISignActivity">
    <include layout="@layout/comm_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/ll_common_title"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/btn_sign"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:text="签到"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/gray_9"
            android:textSize="18sp"
            android:gravity="center"
            android:enabled="false"
            android:background="@drawable/selector_common_circle_button"/>

        <TextView
            android:id="@+id/tv_sign_status"
            android:layout_below="@+id/btn_sign"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:text=""
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/gray_3"
            android:textSize="12sp"
            />
        <View
            android:layout_below="@id/tv_sign_status"
            android:layout_width="match_parent"
            android:layout_marginTop="80dp"
            android:layout_height="0.5dp"
            android:background="@color/gray_4"/>
    </RelativeLayout>


</RelativeLayout>
