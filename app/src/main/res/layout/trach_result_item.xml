<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_trach_result_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_content_bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_trach_result_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="2135"
            android:textColor="@color/text_point"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_trach_result_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="2135"
            android:textColor="@color/text_gray"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dip" >
        <View
            android:layout_width="0.5dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#dddddd" />

        <ImageView
            android:id="@+id/iv_trach_resultstate"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_result_default" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_trach_result_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dip"
        android:layout_weight="1"
        android:lineSpacingExtra="5dip"
        android:paddingBottom="5dip"
        android:paddingTop="8dip"
        android:text="2135"
        android:textColor="@color/text_gray"
        android:textSize="14sp" />

</LinearLayout>