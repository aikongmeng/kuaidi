<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<include
	    android:id="@+id/title" 
	    layout="@layout/comm_title" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical" >

            

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp" >

                <ImageView
                    android:id="@+id/iv_dispose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/top_up_success" />

                <TextView
                    android:id="@+id/tv_dispose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_dispose"
                    android:textSize="16sp"
                    android:text="支付成功" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingTop="20dp" >

                <TextView
                    android:id="@+id/tv_top_up_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/gray_1"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_top_up_title"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/yangjiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/top_up_yangjiao_detail" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/yangjiao"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/gray_1"
                        android:textSize="30sp" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="10dp" >

                <!-- 收款方 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_receive_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       	android:layout_alignParentLeft="true"
                       	android:textColor="@color/gray_3"
                       	android:textSize="14sp"
                        android:text="收&#160;&#160;款&#160;&#160;方" />
                    
                    <TextView 
                        android:id="@+id/tv_receive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_toRightOf="@+id/tv_receive_tag"
                        android:gravity="right"
                        android:lineSpacingExtra="4dp"
                        android:textSize="14sp"
                        android:textColor="@color/gray_2"
                        android:paddingLeft="10dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <!-- 商品 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/tv_goods_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       	android:layout_alignParentLeft="true"
                       	android:textColor="@color/gray_3"
                       	android:textSize="14sp"
                        android:text="商&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;品" />
                    
                    <TextView 
                        android:id="@+id/tv_goods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_toRightOf="@+id/tv_goods_tag"
                        android:gravity="right"
                        android:lineSpacingExtra="4dp"
                        android:textSize="14sp"
                        android:textColor="@color/gray_2"
                        android:paddingLeft="10dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <!-- 交易单号  -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/tv_no_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       	android:layout_alignParentLeft="true"
                       	android:textColor="@color/gray_3"
                       	android:textSize="14sp"
                        android:text="交易单号" />
                    
                    <TextView 
                        android:id="@+id/tv_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_toRightOf="@+id/tv_no_tag"
                        android:gravity="right"
                        android:lineSpacingExtra="4dp"
                        android:textSize="14sp"
                        android:textColor="@color/gray_2"
                        android:paddingLeft="10dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                
                <!-- 交易时间 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/tv_time_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       	android:layout_alignParentLeft="true"
                       	android:textColor="@color/gray_3"
                       	android:textSize="14sp"
                        android:text="交易时间" />
                    
                    <TextView 
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_toRightOf="@+id/tv_time_tag"
                        android:gravity="right"
                        android:lineSpacingExtra="4dp"
                        android:textSize="14sp"
                        android:textColor="@color/gray_2"
                        android:paddingLeft="10dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <!-- 当前状态 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/tv_curStatus_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       	android:layout_alignParentLeft="true"
                       	android:textColor="@color/gray_3"
                       	android:textSize="14sp"
                        android:text="当前状态" />
                    
                    <TextView 
                        android:id="@+id/tv_curStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_toRightOf="@+id/tv_curStatus_tag"
                        android:gravity="right"
                        android:lineSpacingExtra="4dp"
                        android:textSize="14sp"
                        android:textColor="@color/gray_2"
                        android:paddingLeft="10dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_4"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>