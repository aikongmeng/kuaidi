<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <LinearLayout
        android:id="@+id/ll_after_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/gray_4" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_4" />

        <LinearLayout
            android:id="@+id/ll_no_sign"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
             >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/e3_scan_signedpice_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未签收："
                android:paddingLeft="10dp"
                android:textColor="@color/gray_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_nosing_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_2"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 件"
                android:textColor="@color/gray_2"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rl_no_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_no_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="15dp"
                    android:text="查看未签收单号"
                    android:textColor="@color/gray_3"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                    android:src="@drawable/finish_outside_jiantou_right" 
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                
                
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_4" />

        <LinearLayout
            android:id="@+id/ll_question_jian"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
             >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/e3_scan_badpice_icon" />

            <TextView
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="问题件："
                android:textColor="@color/gray_2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_question_jian_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_2"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件"
                android:textColor="@color/gray_2"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rl_question_jian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_question_jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="查看问题件单号"
                    android:textColor="@color/gray_3"
                    android:layout_marginRight="15dp"
                    android:textSize="12sp" />
                    <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                      android:layout_centerInParent="true"
                    android:src="@drawable/finish_outside_jiantou_right" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_4" 
        /> 

</LinearLayout>
