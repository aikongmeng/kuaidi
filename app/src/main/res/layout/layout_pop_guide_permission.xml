<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/popup_bg_permission">
        <RelativeLayout
            android:id="@+id/rl_guide_permission_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/popup_bg_permission"
            android:clickable="true">
        <LinearLayout
            android:id="@+id/popup_anima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guide_permission_1"
                android:layout_gravity="center_horizontal"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:src="@drawable/guide_permisson_2"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_show_permisson_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="如何开启?"
                    android:textSize="13sp"
                    android:textColor="@color/title_bg"/>

                <CheckBox
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="right"
                    android:id="@+id/select_no_warn_again"
                    style="@style/CustomCheckboxThemeTranslucent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:clickable="true"
                    android:text="不再提示"
                    android:textColor="@color/title_bg"
                    android:textSize="13sp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_click_goto_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:src="@drawable/guide_permisson_3"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        </RelativeLayout>
</RelativeLayout>