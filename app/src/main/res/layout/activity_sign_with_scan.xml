<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_5"
    android:orientation="vertical">
    <include layout="@layout/comm_title" />
    <LinearLayout
        android:id="@+id/ll_expressNo_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_4"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运单号"
                android:textSize="15sp"
                android:textColor="@color/gray_2"/>
            <TextView
                android:id="@+id/tv_scan_expressNo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/gray_1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_scan_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待扫码..."
            android:textSize="15sp"
            android:textColor="@color/gray_3"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_4"
        />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_WeChat"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_hint_WeChat"
            android:layout_below="@id/iv_WeChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:text="使用支付宝钱包扫二维码向我付款"
            android:textColor="@color/gray_3"
            android:textSize="14sp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_4"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
         >

        <ImageView
            android:id="@+id/iv_alipay"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tv_hint_alipay"
            android:layout_below="@id/iv_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:text="使用微信扫二维码向我付款"
            android:textColor="@color/gray_3"
            android:textSize="14sp"
            />

    </RelativeLayout>
</LinearLayout>
