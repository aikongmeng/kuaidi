<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_5">

    <include
        android:id="@+id/top_title"
        layout="@layout/comm_title2"/>

    <RelativeLayout
        android:id="@+id/rl_top_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_title">

        <ImageView
            android:id="@+id/iv_top_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:src="@drawable/logo_icon"/>

        <TextView
            android:id="@+id/tv_current_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_below="@id/iv_top_logo"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:textColor="@color/gray_2"
            android:text="v4.9.0"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/rl_top_logo"
        android:background="@color/white">

        <View
            android:id="@+id/devider_line0"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_4"/>

        <RelativeLayout
            android:id="@+id/rl_use_help"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:paddingLeft="15dp"
            android:layout_below="@id/devider_line0"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_1"
                android:textSize="16sp"
                android:text="使用帮助"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/finish_outside_jiantou_right"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:id="@+id/devider_line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/rl_use_help"
            android:background="@color/gray_4"/>

        <RelativeLayout
            android:id="@+id/rl_function_introduce"
            android:layout_width="match_parent"
            android:layout_below="@id/devider_line1"
            android:layout_height="49dp"
            android:paddingLeft="15dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_1"
                android:textSize="16sp"
                android:text="功能介绍"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/finish_outside_jiantou_right"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:id="@+id/devider_line2"
            android:layout_width="match_parent"
            android:layout_below="@id/rl_function_introduce"
            android:layout_marginLeft="15dp"
            android:layout_height="0.5dp"
            android:background="@color/gray_4"/>

        <RelativeLayout
            android:id="@+id/rl_check_version"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@id/devider_line2"
            android:paddingLeft="15dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_1"
                android:textSize="16sp"
                android:text="检查新版本"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/finish_outside_jiantou_right"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:id="@+id/devider_line3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/rl_check_version"
            android:background="@color/gray_4"/>

        <RelativeLayout
            android:id="@+id/rl_contact_us"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@id/devider_line3"
            android:paddingLeft="15dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_1"
                android:textSize="16sp"
                android:text="联系我们"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/finish_outside_jiantou_right"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:id="@+id/devider_line4"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_height="0.5dp"
            android:layout_below="@id/rl_contact_us"
            android:background="@color/gray_4"/>

        <RelativeLayout
            android:id="@+id/rl_advice_review"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@id/devider_line4"
            android:paddingLeft="15dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray_1"
                android:textSize="16sp"
                android:text="意见反馈"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/finish_outside_jiantou_right"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:id="@+id/devider_line5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/rl_advice_review"
            android:background="@color/gray_4"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="10sp"
            android:textColor="@color/gray_2"
            android:text="快宝（上海）网络科技有限公司"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_company_name"
            android:gravity="center_horizontal"
            android:textSize="10sp"
            android:textColor="@color/gray_3"
            android:text="Copyrights © 2012-2016 Kuaidihelp\nAll Rights Reserved"/>


    </RelativeLayout>


</RelativeLayout>
