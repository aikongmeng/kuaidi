<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:skin="http://schemas.android.com/android/skin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <com.kuaibao.skuaidi.common.layout.SkuaidiRelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/title_bg"
        skin:enable="true">

        <com.kuaibao.skuaidi.common.view.SkuaidiImageView
            xmlns:skin="http://schemas.android.com/android/skin"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_icon_back"
            android:onClick="back"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:src="@drawable/icon_back"
            skin:enable="true"/>

        <LinearLayout
            android:id="@+id/ll_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_white3"
            android:orientation="horizontal"
            android:padding="1dp">

            <TextView
                xmlns:skin="http://schemas.android.com/android/skin"
                android:id="@+id/button_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_radius_btn_left_white2"
                android:enabled="true"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:text="发件箱"
                android:textColor="@color/default_green"
                android:textSize="15sp"/>

            <View
                android:id="@+id/line1"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <!-- android:background="@drawable/shape_radius_btn_center" -->

            <TextView
                xmlns:skin="http://schemas.android.com/android/skin"
                android:id="@+id/button_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/default_green"
                android:enabled="true"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:text="草稿箱"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <View
                android:id="@+id/line2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
            <!-- android:background="@drawable/shape_radius_btn_right_white1" -->

            <TextView
                xmlns:skin="http://schemas.android.com/android/skin"
                android:id="@+id/button_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_default_green_radius_right"
                android:enabled="true"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:text="草稿箱"
                android:textColor="@color/white"
                android:textSize="15sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title_des"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="15"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:visibility="gone"/>

        <com.kuaibao.skuaidi.common.view.SkuaidiTextView
            xmlns:skin="http://schemas.android.com/android/skin"
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_icon_back"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_more"
            android:text="排序"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            skin:enable="true"/>
    </com.kuaibao.skuaidi.common.layout.SkuaidiRelativeLayout>

</LinearLayout>