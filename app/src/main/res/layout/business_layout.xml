    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.kuaibao.skuaidi.common.layout.SkuaidiRelativeLayout xmlns:custom_atts="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rl_qunfa_duanxin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_business_sendmessage_bg"
            android:orientation="vertical"
            custom_atts:isClickedChangeBackground="true"
            skin:enable="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/business_manual_input_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:text="发短信"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </com.kuaibao.skuaidi.common.layout.SkuaidiRelativeLayout>
        <!-- 云呼 -->
        <com.kuaibao.skuaidi.common.layout.SkuaidiRelativeLayout xmlns:custom_atts="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rl_business_btn_yunhu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_business_sendmessage_bg"
            android:orientation="vertical"
            android:visibility="visible"
            custom_atts:isClickedChangeBackground="true"
            skin:enable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/business_manual_cloud_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:text="@string/business_btn_txt_yunhu"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </com.kuaibao.skuaidi.common.layout.SkuaidiRelativeLayout>

