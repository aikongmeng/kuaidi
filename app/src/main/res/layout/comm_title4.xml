<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:skin="http://schemas.android.com/android/skin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_content_bg"
        android:orientation="vertical">

        <com.kuaibao.skuaidi.common.layout.SkuaidiRelativeLayout
            android:id="@+id/srlTitle2"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/title_bg"
            skin:enable="true">

            <com.kuaibao.skuaidi.common.view.SkuaidiImageView
                xmlns:skin="http://schemas.android.com/android/skin"
                android:id="@+id/iv_title_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_icon_back"
                android:onClick="back"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:src="@drawable/icon_back"
                skin:enable="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_white3"
                android:orientation="horizontal">

                <TextView
                    xmlns:skin="http://schemas.android.com/android/skin"
                    android:id="@+id/smsRecordBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_segment_choice"
                    android:enabled="false"
                    android:paddingBottom="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="4dp"
                    android:text="发件箱"
                    android:textColor="@color/title_bg"
                    android:textSize="15sp"
                    skin:enable="true"/>

                <TextView
                    xmlns:skin="http://schemas.android.com/android/skin"
                    android:id="@+id/smsDraftBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_segment_choice"
                    android:enabled="true"
                    android:paddingBottom="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="4dp"
                    android:text="草稿箱"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    skin:enable="true"/>
            </LinearLayout>

            <com.kuaibao.skuaidi.common.view.SkuaidiImageView
                xmlns:skin="http://schemas.android.com/android/skin"
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_icon_back"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_more"
                skin:enable="true"/>
        </com.kuaibao.skuaidi.common.layout.SkuaidiRelativeLayout>
    </LinearLayout>

</LinearLayout>