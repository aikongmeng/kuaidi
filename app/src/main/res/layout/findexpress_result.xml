<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_sto"
        layout="@layout/comm_title2" />

    <LinearLayout
        android:id="@+id/ll_findexpress_result_announcement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_announcement"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible"
    >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_laba" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_result_announcement_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_result_announcement_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:textColor="@color/text_gray" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_jiant" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp" >

                <ImageView
                    android:id="@+id/iv_findexpress_result_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_findexpress_result_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:singleLine="true"
                    android:textColor="@color/text_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_findexpress_result_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_black"
                    android:text="最新状态："
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@color/gray_3"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:onClick="setremark"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_findexpress_result_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:singleLine="true"
                android:text="@string/add_remarks"
                android:textColor="@color/text_hint"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_findexpress_result_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:src="@drawable/icon_find_express_remark" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_findexpress_load_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible"

            >

            <com.kuaibao.skuaidi.activity.view.RotateLoadView
                android:id="@+id/view_rotateload_two"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/load_data"
                android:textColor="@color/text_black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_findexpress_result_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="gone"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_findexpress_result_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_xiao" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_findexpress_result_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_submit_green"
                android:gravity="center_horizontal"
                android:onClick="handle"
                android:orientation="horizontal"
                android:paddingBottom="1dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="1dp" >

                <TextView
                    android:id="@+id/tv_findexpress_result_handle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/tv_findexpress_result_handle"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/icon_jiant_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_findexpress_result_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/speed_no"
                    android:textColor="@color/text_hint"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_findexpress_result_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="@string/no"
                    android:textColor="@color/yellow"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_note_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">

        <View
            android:id="@+id/line_devider_info"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_5" />

        <TextView
            android:id="@+id/tv_note_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_devider_info"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="@color/text_orange"
            android:text="备注："/>

        <ImageView
            android:id="@+id/iv_note_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_delete"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/gray_5" />

    <!-- 展示客户信息 -->

    <RelativeLayout
        android:id="@+id/rl_receipt_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:background="@color/white"
        android:visibility="visible"
        tools:visibility="visible"

        >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rt_bottom_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_bottom_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/findexpress_result_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/userhead" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_bottom_left"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/cust_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收件人："
                android:textColor="@color/gray_2"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/call_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/cust_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@id/call_phone"
                android:layout_marginRight="30dp"
                android:text=""
                android:textColor="@color/gray_2"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/cust_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cust_name"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:textColor="@color/gray_2"
                android:text="收件地址："
                android:textSize="14sp" />
        </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_info_tag"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/rt_bottom_info"
            android:orientation="vertical">
            <View
                android:id="@+id/line_devider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/gray_5"/>

            <TextView
                android:id="@+id/tv_get_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_3"
                android:textSize="14sp"
                android:drawableLeft="@drawable/tag_huo_icon"
                android:drawablePadding="10dp"
                android:visibility="gone"/>

            <View
                android:id="@+id/line_devider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray_5"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/iv_intercept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_3"
                android:textSize="14sp"
                android:drawableLeft="@drawable/tag_lan_icon"
                android:drawablePadding="10dp"
                android:visibility="gone"/>

            <View
                android:id="@+id/line_devider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray_5"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_complain1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_3"
                android:textSize="14sp"
                android:drawableLeft="@drawable/tag_su_icon"
                android:drawablePadding="10dp"
                android:visibility="gone"/>

            <View
                android:id="@+id/line_devider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray_5"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_complain2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_3"
                android:textSize="14sp"
                android:drawableLeft="@drawable/tag_su_icon"
                android:drawablePadding="10dp"
                android:visibility="gone"/>

            <View
                android:id="@+id/line_devider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray_5"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_complain3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_3"
                android:textSize="14sp"
                android:drawableLeft="@drawable/tag_su_icon"
                android:drawablePadding="10dp"
                android:visibility="gone"/>

            <View
                android:id="@+id/line_devider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray_5"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_complain4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_3"
                android:textSize="14sp"
                android:drawableLeft="@drawable/tag_su_icon"
                android:drawablePadding="10dp"
                android:visibility="gone"/>

            <View
                android:id="@+id/line_devider7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray_5"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_complain5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray_3"
                android:textSize="14sp"
                android:drawableLeft="@drawable/tag_su_icon"
                android:drawablePadding="10dp"
                android:visibility="gone"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_content_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/ll_info_tag"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/dispatch_dropmenu_icon"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_devider"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/gray_5"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="8dp"
        android:text="物流信息"
        android:textSize="14sp"
        android:textColor="@color/gray_3"
        android:drawableLeft="@drawable/icon_ordernum_tracking"
        android:drawablePadding="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_5" />

    <LinearLayout
        android:id="@+id/ll_findexpress_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center" >

        <com.kuaibao.skuaidi.activity.view.RotateLoadView
            android:id="@+id/view_rotateload"
            android:layout_width="28dp"
            android:layout_height="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/load_info"
            android:textColor="@color/text_black"
            android:textSize="20sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_findexpress_notfind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:visibility="gone"
        tools:visibility="visible"

        >

        <LinearLayout
            android:id="@+id/ll_findexpress_notfind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/no_find"
                android:paddingTop="40dp"
                android:paddingBottom="40dp"
                android:textColor="@color/gray_3"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="#c7c7c7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="@string/reason"
                android:drawableLeft="@drawable/mark_icon"
                android:drawablePadding="10dp"
                android:textColor="@color/gray_2"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/jichu"
                    android:textColor="@color/gray_3"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/info_fail"
                    android:textColor="@color/gray_3"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_findexpress_result_web_express"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:onClick="web_express"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="@string/visit"
                    android:textColor="@color/gray_3"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_findexpress_result_notfind_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_orange"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trial"
                    android:textColor="@color/gray_3"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ListView
        android:id="@+id/lv_findexpress_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:cacheColorHint="@color/gray_5"
        android:divider="#ededed"
        android:dividerHeight="0.5dp"
        android:listSelector="@color/gray_5"
        android:visibility="gone"
        tools:visibility="visible"
        >
    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d6d7e0"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_msg_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="top"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="您有新的"
            android:textColor="@color/gray_2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_sms_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_green_two"
            android:text="短信消息"
            android:onClick="getSmsDetail"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_msg_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_2"
            android:text="及"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_liuyan_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言信息"
            android:textColor="@color/blue_1"
            android:textSize="16sp"
            android:onClick="getLiuyanDetail"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_2"
            android:text=">>"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 没有客户信息的底部布局 -->

    <RelativeLayout
        android:id="@+id/rt_bottom_info_fail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="bottom"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:visibility="gone"
        tools:visibility="visible"
        >

        <ImageView
            android:id="@+id/iv_cust_info"
            android:layout_width="58dp"
