<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_5"
    android:orientation="vertical">
    <include layout="@layout/comm_title_more" />

    <LinearLayout
        android:id="@+id/ll_sto_weight_notify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF3BB"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/description_banch_weight"
                android:textSize="13sp"
                android:textColor="@color/text_black"
                android:drawableLeft="@drawable/icon_warning"
                android:layout_gravity="center_vertical"
                android:drawablePadding="8dp"/>
            <ImageView
                android:id="@+id/iv_close_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/icon_hide_notify"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单号"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/gray_1"
            android:drawableLeft="@drawable/hint_icon_big"
            android:drawablePadding="4dp"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tv_weight_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物品重量·kg"
            android:textColor="@color/gray_1"
            android:drawableLeft="@drawable/hint_icon_big"
            android:drawablePadding="4dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="13sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物品类别"
            android:textColor="@color/gray_1"
            android:drawableLeft="@drawable/hint_icon_big"
            android:drawablePadding="4dp"
            android:layout_toLeftOf="@id/tv_weight_title"
            android:layout_marginRight="20dp"
            android:textSize="13sp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_4" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <CheckBox
                android:id="@+id/select_all_weight"
                android:button="@drawable/checkbox_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:clickable="true"
                android:text="全选"
                android:textColor="@color/gray_2"
                android:textSize="16sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_banch_weighting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="批量录入重量"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_4" />
        <LinearLayout
            android:id="@+id/ll_upload_banch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_button_save"
            android:clickable="true"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableLeft="@drawable/bg_save"
                android:drawablePadding="10dp"
                android:text="保存"
                android:textColor="@color/default_green_2"
                android:textSize="15sp" />
        </LinearLayout>
        </LinearLayout>

</LinearLayout>
