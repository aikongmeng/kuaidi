<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="分享成功！如何领取红包？"
        android:textColor="@color/share_callback_red_text"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/share_callback_red_text" />

    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="如果你同事："
        android:textColor="@color/text_black"
        android:textSize="15sp" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="1.下载注册快递员APP"
        android:textColor="@color/text_black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="2.填写了派送范围（在“我的名片”里面）"
        android:textColor="@color/text_black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="3.分享过资讯中心或快递圈的帖子"
        android:textColor="@color/text_black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:text="你会立即获得："
        android:textColor="@color/text_black"
        android:textSize="15sp" />
	
    <TextView
        android:id="@+id/share_callback_tvSeven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/text_black"
        android:textSize="15sp" />

     <Button 
         	android:layout_marginTop="25dp"
         	android:layout_marginLeft="10dp"
         	android:layout_marginRight="10dp"
            android:id="@+id/click_to_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="我知道了"
            android:textSize="18dp"
            android:visibility="visible"
            android:textColor="@color/white"
            android:background="@drawable/share_callback_button_selector"
            android:onClick="shareISee"
            />

</LinearLayout>