<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:gravity="center_vertical"
              android:background="@color/white"
              android:paddingTop="10dp"
              android:paddingRight="15dp"
              android:paddingBottom="10dp"
              android:layout_height="wrap_content">
<ImageView
    android:id="@+id/iv_delete_account"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:src="@drawable/icon_delete_account"/>

    <ImageView
        android:id="@+id/iv_user_headimg"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/logo"/>
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_account_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="风清扬"
        android:paddingBottom="5dp"
        android:textColor="@color/gray_1"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/tv_account_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13888888888"
        android:textColor="@color/gray_3"
        android:textSize="12sp" />
</LinearLayout>
    <ImageView
        android:id="@+id/iv_current_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_current_user"
        android:visibility="gone"
        />
</LinearLayout>