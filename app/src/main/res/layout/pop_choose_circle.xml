<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal" >

        <RelativeLayout
            android:id="@+id/ll_all"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_pop_top" >

            <ImageView
                android:id="@+id/iv_gou1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_signed_gou"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_text1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:background="@drawable/selector_pop_top"
                android:gravity="center_horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="全部帖子"
                android:textColor="@color/text_black"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="165dip"
            android:layout_height="1dip"
            android:layout_below="@+id/ll_all"
            android:background="@color/item_bg" />
        <!-- 客户心声 -->

        <RelativeLayout
            android:id="@+id/ll_thevoice_of_the_customer"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view3"
            android:background="@drawable/selector_popu_bg" >

            <ImageView
                android:id="@+id/iv_gou4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_signed_gou"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_text4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:gravity="center_horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="客户心声"
                android:textColor="@color/text_black"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="165dip"
            android:layout_height="1dip"
            android:layout_below="@+id/ll_thevoice_of_the_customer"
            android:background="@color/item_bg" />
        <!-- 我的帖子 -->

        <RelativeLayout
            android:id="@+id/ll_my"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:background="@drawable/selector_popu_bg" >

            <ImageView
                android:id="@+id/iv_gou2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_signed_gou"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_text2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:gravity="center_horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="我的帖子"
                android:textColor="@color/text_black"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="165dip"
            android:layout_height="1dip"
            android:layout_below="@+id/ll_my"
            android:background="@color/item_bg" />

        <RelativeLayout
            android:id="@+id/ll_search"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:background="@drawable/selector_pop_bottom" >

            <ImageView
                android:id="@+id/iv_gou3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_signed_gou"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_text3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:gravity="center_horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="搜索帖子"
                android:textColor="@color/text_black"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>