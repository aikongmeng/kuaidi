<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom_atts="http://schemas.android.com/apk/res-auto"
              xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.kuaibao.skuaidi.common.layout.SkuaidiRelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/title_bg" >

        <com.kuaibao.skuaidi.common.view.SkuaidiImageView
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            xmlns:skin="http://schemas.android.com/android/skin"  android:background="@drawable/selector_icon_back"  skin:enable="true"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:src="@drawable/icon_back"
            custom_atts:isClickedChangeBackground="true" />

        <TextView
            android:id="@+id/tv_title_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/qrcode_history"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <com.kuaibao.skuaidi.common.view.SkuaidiTextView
            android:id="@+id/customer_manager_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            xmlns:skin="http://schemas.android.com/android/skin"  android:background="@drawable/selector_icon_back"  skin:enable="true"
            android:drawableLeft="@drawable/san_count_default"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scaleType="centerInside"
            android:text="  扫描统计"
            android:textColor="@color/white"
            android:textSize="14sp"
            custom_atts:isClickedChangeBackground="true" />
    </com.kuaibao.skuaidi.common.layout.SkuaidiRelativeLayout>

    <HorizontalScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/ll_bar"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <FrameLayout
                android:id="@+id/ll_lanPice"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_count_lan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:background="@drawable/business_num_cercle"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_lanPice"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/tv_lanPice"
                    android:textColor="@color/title_bg"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/line_lanPice"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="bottom"
                    android:background="@color/title_bg" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/ll_faPice"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_count_fa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:background="@drawable/business_num_cercle"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_faPice"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/tv_faPice"
                    android:textColor="@color/text_hint"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/line_faPice"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="bottom"
                    android:background="@color/btn_gray1" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/ll_piePice"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_count_pie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:background="@drawable/business_num_cercle"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_piePice"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/tv_piePice"
                    android:textColor="@color/text_hint"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/line_piePice"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="bottom"
                    android:background="@color/btn_gray1" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/ll_daoPice"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_count_dao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:background="@drawable/business_num_cercle"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_daoPice"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/tv_daoPice"
                    android:textColor="@color/text_hint"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/line_daoPice"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="bottom"
                    android:background="@color/btn_gray1" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/ll_signedPice"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_count_signed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:background="@drawable/business_num_cercle"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_signedPice"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/tv_signedPice"
                    android:textColor="@color/text_hint"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/line_signedPice"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="bottom"
                    android:background="@color/btn_gray1" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/ll_badPice"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_count_bad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:background="@drawable/business_num_cercle"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_badPice"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/scan_ques"
                    android:textColor="@color/text_hint"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/line_badPice"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="bottom"
                    android:background="@color/btn_gray1" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/ll_rejectPice"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_count_reject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:background="@drawable/business_num_cercle"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_rejectPice"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/scan_reject"
                    android:textColor="@color/text_hint"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/line_rejectPice"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="bottom"
                    android:background="@color/btn_gray1" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/ll_third_brunch"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_count_third_brunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:background="@drawable/business_num_cercle"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_third_brunch"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/scan_third_brunch"
                    android:textColor="@color/text_hint"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/line_third_brunch"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_gravity="bottom"
                    android:background="@color/btn_gray1" />
            </FrameLayout>



        </LinearLayout>
    </HorizontalScrollView>

    <com.kuaibao.skuaidi.activity.view.PullToRefreshView
        android:id="@+id/pull_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_ethreeinfos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@color/btn_gray1"
            android:dividerHeight="0.5dp"
            android:listSelector="#00000000" />
    </com.kuaibao.skuaidi.activity.view.PullToRefreshView>
    <LinearLayout
        android:id="@id/ll_operate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/btn_gray1" />
        <TextView
            android:id="@+id/tv_sweep_record_content"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center"
            android:background="#f2f2f2"
            android:text="今日共扫描收件：0"
            android:singleLine="true"
            android:textColor="#666666"
            android:textSize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/btn_gray1" />
        <LinearLayout
            android:id="@+id/ll_new_operate"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_scan_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClickOne"
                android:singleLine="true"
                android:text="签收扫描(0)"
                android:textColor="@color/text_color_qianshou__selector"
                android:textSize="16sp"
                android:drawableRight="@drawable/icon_fengexian"
                />

            <TextView
                android:id="@+id/tv_scan_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClickTwo"
                android:singleLine="true"
                android:text="签收扫描(0)"
                android:textColor="@color/text_color_qianshou__selector"
                android:textSize="16sp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_button_save"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_deleteMistake"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_button_save"
            android:clickable="true"
            android:onClick="deleteIncorrect"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/icon_del_incorrect"
                android:drawablePadding="10dp"
                android:text="删除错扫"
                android:textColor="@color/default_green_2"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/gray_4" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_button_save"
            android:clickable="true"
            android:onClick="upload"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/tv_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/bg_upload"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:text="@string/immediately_upload"
                android:textColor="@color/default_green_2"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>