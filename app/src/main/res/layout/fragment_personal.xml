<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:skin="http://schemas.android.com/android/skin"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_more_user"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:background="@color/title_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        skin:enable="true">

        <ImageView
            android:id="@+id/iv_defalt_head"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_defalt_head"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_more_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄ceshi"
                    android:textColor="@color/gray_9"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/tvBrand"
                    android:layout_width="72dp"
                    android:layout_height="24dp"
                    android:background="@drawable/icon_more_brand"
                    android:text="中通"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/gray_9"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_userPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="13661964640"
                android:textColor="@color/gray_9"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_more_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_right_white"/>

            <ImageView
                android:id="@+id/iv_user_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@id/iv_more_user"
                android:src="@drawable/more_code"/>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_5"
        android:gravity="center_horizontal"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_4"/>

                <RelativeLayout
                    android:id="@+id/ll_myaccount"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/selector_white_item_clickcolor"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tvWallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/more_activity_icon_wallet"
                        android:drawablePadding="10dp"
                        android:text="@string/more_account"
                        android:textColor="@color/gray_1"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/iv_myaccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/finish_outside_jiantou_right"/>

                    <TextView
                        android:id="@+id/tv_more_my_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/iv_myaccount"
                        android:text="..."
                        android:textColor="@color/gray_2"
                        android:textSize="14sp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="39dp"
                    android:background="@color/gray_4"/>


                <RelativeLayout
                    android:id="@+id/ll_myVantages"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/selector_white_item_clickcolor"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tvCredit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/more_activity_icon_credit"
                        android:drawablePadding="10dp"
                        android:text="@string/more_vantages"
                        android:textColor="@color/gray_1"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/iv_myVantages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/finish_outside_jiantou_right"/>

                    <TextView
                        android:id="@+id/tvShowCredit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/iv_myVantages"
                        android:text="..."
                        android:textColor="@color/gray_2"
                        android:textSize="14sp"/>
                </RelativeLayout>

                <View
                    android:id="@+id/line_VD"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="39dp"
                    android:background="@color/gray_4"/>

                <RelativeLayout
                    android:id="@+id/rl_delivery_fees"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/selector_white_item_clickcolor"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/icon_delivery_fees"
                        android:drawablePadding="10dp"
                        android:text="@string/more_delivery_fees"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/finish_outside_jiantou_right"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_4"/>

                <RelativeLayout
                    android:id="@+id/rlInformationCenter"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/selector_white_item_clickcolor"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tvInformationCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/more_activity_icon_information"
                        android:drawablePadding="10dp"
                        android:text="@string/more_information"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/finish_outside_jiantou_right"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="39dp"
                    android:background="@color/gray_4"/>

                <RelativeLayout
                    android:id="@+id/rl_inform_center"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/selector_white_item_clickcolor"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_inform_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/more_activity_icon_notice"
                        android:drawablePadding="10dp"
                        android:text="@string/more_notice"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/iv_red_icon_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/business_red_circle"
                        android:layout_above="@+id/tv_inform_center"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_toRightOf="@+id/tv_inform_center"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/finish_outside_jiantou_right"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_4"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_4"/>

                <RelativeLayout
                    android:id="@+id/rl_share"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_white_item_clickcolor"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/more_activity_icon_share"
                        android:drawablePadding="10dp"
                        android:text="分享"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/finish_outside_jiantou_right"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="39dp"
                    android:background="@color/gray_4"/>


                <RelativeLayout
                    android:id="@+id/rl_more_setting"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_white_item_clickcolor"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/more_activity_icon_setting"
                        android:drawablePadding="10dp"
                        android:text="设置"
                        android:textColor="@color/text_black"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/finish_outside_jiantou_right"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_4"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
