<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_sto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="8dp"
    android:paddingTop="10dp"
    tools:showIn="@layout/activity_lan_zt">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="229316008642"
            android:textColor="@color/gray_1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_status_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_number"
            android:text="最新状态："
            android:textColor="@color/gray_3"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_number"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_status_hint"
            android:background="@drawable/bg_status_normal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:text="到件"
            android:textColor="@color/gray_3"
            android:textSize="12sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/tvUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="kg"
        android:textColor="@color/gray_2"
        android:textSize="15sp"

        />

    <EditText
        android:id="@+id/et_weigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/tvUnit"
        android:width="60dp"
        android:background="@drawable/bg_status_normal"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:textColor="@color/gray_1"
        android:textColorHint="@color/gray_3"
        android:hint="0.2"
        android:textSize="15sp"
        tools:text="5" />

    <TextView
        android:id="@+id/tv_wupinleibie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@id/et_weigh"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/icon_switch_state"
        android:padding="4dp"
        android:text="@string/wupinleibie_huoyang"
        android:textColor="@color/gray_1"
        android:textSize="15sp" />
</RelativeLayout>


    