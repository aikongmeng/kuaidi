<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:call="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/voip_layout_parent"
              android:orientation="vertical"
    android:layout_height="match_parent">

    <com.kuaibao.skuaidi.business.nettelephone.widget.ECCallHeadUILayout
        android:id="@+id/call_header_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:paddingTop="20dip" />

    <com.kuaibao.skuaidi.business.nettelephone.widget.ECCallControlUILayout
        android:id="@+id/call_control_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        call:call_direct="outgoing"/>
</LinearLayout>
