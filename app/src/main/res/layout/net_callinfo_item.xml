<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/call_logs_item_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_listitem_common"
    android:paddingLeft="15dp"
    android:paddingRight="0dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal" >
 <CheckBox
        android:id="@+id/delete_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        style="@style/CustomCheckboxTheme" 
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:visibility="gone"
        />
 <LinearLayout 
    android:layout_width="0dp"
     android:layout_weight="1"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >
      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
            android:gravity="center_vertical"
             android:layout_marginBottom="6dp"
          >
            <TextView
                android:id="@+id/caller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="张三麻"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/call_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/caller_name"
                android:layout_toEndOf="@id/caller_name"
                android:textColor="@color/text_sender_adress"
                 android:text="30秒"
                  android:layout_centerVertical="true"
                 android:gravity="center"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:gravity="center_vertical"
             android:layout_marginTop="6dp"
             >

             <TextView
                android:id="@+id/cust_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_sender_adress"
                android:gravity="center"
                 android:layout_centerVertical="true"
                  android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:text="13888888888"
                android:textSize="12sp" />
             <TextView
                android:id="@+id/call_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cust_tel"
                android:layout_toEndOf="@id/cust_tel"
                android:textColor="@color/text_sender_adress"
                android:gravity="center"
                 android:layout_centerVertical="true"
                  android:text="03-04 16:39"
                android:textSize="12sp" />

    </RelativeLayout>
 </LinearLayout>
<LinearLayout
    android:id="@+id/ll_iv_audio_parent"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_play_netcall_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_gravity="center_vertical" />

    <ImageView
        android:id="@+id/iv_netcall_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/icon_netcall_share"/>

</LinearLayout>
</LinearLayout>