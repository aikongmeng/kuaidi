<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:background="@color/transparent"
                android:layout_height="wrap_content">
<ImageView
    android:id="@+id/iv_package_window_close"
    android:layout_width="16dp"
    android:layout_height="16dp"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/poi_list_recycler"
    android:layout_marginBottom="-9dp"
    android:layout_marginLeft="-8dp"
    android:src="@drawable/dispatch_map_close"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/poi_list_recycler"
        android:layout_width="wrap_content"
        android:background="@drawable/marker_bg"
        android:layout_below="@id/iv_package_window_close"
        android:layout_centerInParent="true"
        android:layout_height="180dp">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>