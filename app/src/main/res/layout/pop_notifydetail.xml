<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="70dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="15dip"
        android:gravity="right"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="165dip"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_pop_top" >

            <TextView
                android:id="@+id/tv_lan"
                android:layout_width="165dip"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_pop_top"
                android:gravity="center_horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="@string/scan_lan"
                android:textColor="@color/text_black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_lan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/pop_choose_icon"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="165dip"
            android:layout_height="1dip"
            android:background="@color/item_bg" />

        <RelativeLayout
            android:layout_width="165dip"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_popu_bg" >

            <TextView
                android:id="@+id/tv_pai"
                android:layout_width="165dip"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_popu_bg"
                android:gravity="center_horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="@string/scan_pai"
                android:textColor="@color/text_black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_pai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/pop_choose_icon"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="165dip"
            android:layout_height="1dip"
            android:background="@color/item_bg" />

        <RelativeLayout
            android:layout_width="165dip"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_popu_bg" >

            <TextView
                android:id="@+id/tv_qian"
                android:layout_width="165dip"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_popu_bg"
                android:gravity="center_horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="@string/scan_qian"
                android:textColor="@color/text_black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_qian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/pop_choose_icon"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="165dip"
            android:layout_height="1dip"
            android:background="@color/item_bg" />

        <RelativeLayout
            android:layout_width="165dip"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_pop_bottom" >

            <TextView
                android:id="@+id/tv_ques"
                android:layout_width="165dip"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_pop_bottom"
                android:gravity="center_horizontal"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="@string/scan_ques"
                android:textColor="@color/text_black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_ques"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/pop_choose_icon"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>