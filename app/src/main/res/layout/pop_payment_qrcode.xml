<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <RelativeLayout
        android:id="@+id/rl_all"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
         >

        <RelativeLayout
            android:id="@+id/rl_qrcode_show"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginLeft="15dp" />

            <LinearLayout
                android:id="@+id/ll_shopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_qrcode"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="支付快递费-"
                    android:textColor="@color/text_gray3"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="申通快递王师傅"
                    android:textColor="@color/text_gray3"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_activity_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_qrcode"
                android:gravity="center"
                android:textColor="@color/title_bg"
                android:textSize="16sp" />
            <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_activity_description"
            android:layout_marginTop="10dp"
            android:background="@color/background_gray"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text=" 给客户扫一扫，快捷支付快递费"
            android:textColor="@color/text_gray" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/close"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>