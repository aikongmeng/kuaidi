<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/shape_dialog_up"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="标题"
        android:textColor="@color/default_green_2"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_4" />

    <LinearLayout
        android:id="@+id/llBody1"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <ImageView
            android:id="@+id/ivPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@drawable/cloud_play_stop2" />

        <TextView
            android:id="@+id/tvTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_1"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottomBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_4" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <LinearLayout
                android:id="@+id/llBtnMore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/BtnCancle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_dialog_cancle"
                    android:padding="15dp"
                    android:text="@string/cancel"
                    android:textColor="@color/gray_1"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_4" />

                <Button
                    android:id="@+id/BtnMiddle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_dialog_middle"
                    android:padding="15dp"
                    android:text="@string/always"
                    android:textColor="@color/gray_1"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view_line"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_4"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/BtnOk"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_dialog_ok"
                    android:padding="15dp"
                    android:text="@string/add"
                    android:textColor="@color/gray_1"
                    android:textSize="16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/BtnSingle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_shape_bottom_right_white_blue2"
                android:padding="10dp"
                android:text="@string/cancel"
                android:textColor="@color/gray_1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>