<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ededed"
        android:gravity="center"
        android:paddingRight="12dp"
        android:paddingBottom="9dp"
        android:paddingTop="9dp" >

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_height="30dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/goback_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fram"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toEndOf="@+id/back"
            android:layout_toRightOf="@+id/back"
            android:background="@drawable/shape_white"
            android:padding="1dp" >

            <EditText
                android:id="@+id/etInputNo"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:drawableLeft="@drawable/icon_rule_soso"
                android:drawablePadding="9dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:drawableStart="@drawable/icon_rule_soso"
                android:hint="输入快递公司名称"
                android:paddingEnd="9dp"
                android:paddingLeft="9dp"
                android:paddingStart="9dp"
                android:singleLine="true"
                android:textColor="@color/gray_1"
                android:textColorHint="@color/gray_7"
                android:textSize="14sp" />
            
            <ImageView 
                android:id="@+id/clearInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                android:background="@drawable/icon_delete"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_4" />

    <ListView
        android:id="@+id/lvSmsRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:visibility="gone" />

</LinearLayout>