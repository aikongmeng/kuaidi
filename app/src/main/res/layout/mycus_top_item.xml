<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <View
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="@color/alpha_bg"
	    />
    <LinearLayout
        android:id="@+id/sync_customer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_orderitem_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="10dip"
            android:src="@drawable/icon_sync_costomer" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="同步通讯录"
                android:textColor="@color/text_black"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:src="@drawable/icon_jiant" />
    </LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="@color/alpha_bg"
	    />
    <LinearLayout
        android:id="@+id/who_collect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_orderitem_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="10dip"
            android:src="@drawable/icon_collect" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="谁收藏了我"
                android:textColor="@color/text_black"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:src="@drawable/icon_jiant" />
    </LinearLayout>
    <View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="@color/alpha_bg"
	    />
    <LinearLayout
        android:id="@+id/baned_recorder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_orderitem_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="10dip"
            android:src="@drawable/icon_cusgroup_banedrecord_normal" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="禁止录音组"
                android:textColor="@color/text_black"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:src="@drawable/icon_jiant" />
    </LinearLayout>
    
    
   
</LinearLayout>