<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">

        <ImageView
            android:id="@+id/iv_tag_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/tag_huo_icon"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_tag_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_tag_icon"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            tools:text="货到付款"
            android:textSize="14sp"
            android:textColor="@color/gray_1"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_tag_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_delete"
            android:visibility="visible"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_line_devider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/item_hover"
        android:layout_marginLeft="10dp"/>

</LinearLayout>
