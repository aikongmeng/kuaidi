<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kuaibao.skuaidi.activity.picksendmapmanager.PickAndSendMapActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_center_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:src="@drawable/takerange_mark_recommend"/>
                <com.amap.api.maps2d.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.amap.api.maps2d.MapView>
                <RelativeLayout
                    android:id="@+id/rl_pick_map_control"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="-48dp"
                    android:background="@color/title_bg"
                    android:gravity="center_vertical"
                    android:visibility="invisible"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_description_rang_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已设取派点：18个"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/tv_control_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加取派范围"
                        android:drawablePadding="4dp"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv_review_all_range"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="查看全部"
                        android:drawableRight="@drawable/icon_return_right"
                        android:drawablePadding="4dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:textSize="13sp"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/iv_locate_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/rl_pick_map_control"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="54dp"
                    android:src="@drawable/icon_coordinate"/>
                <LinearLayout
                    android:id="@+id/ll_goto_search"
                    android:layout_width="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:alpha="0.85"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_search_return"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_return_left"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        />
                    <View
                        android:layout_width="0.5dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_line" />
                    <LinearLayout
                        android:id="@+id/ll_search_map_click"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_search_map"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:text="输入地点"
                            android:textSize="16sp"
                            android:textColor="@color/gray_7"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_search_result_parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:visibility="gone"
            android:orientation="vertical">
            <com.vlonjatg.progressactivity.ProgressActivity
                android:id="@+id/progressLayout_search_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/poi_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
                </com.vlonjatg.progressactivity.ProgressActivity>
        </LinearLayout>

</LinearLayout>
