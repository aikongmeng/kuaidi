<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/shape_white" >

        <TextView
            android:id="@+id/rl_title_identity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="请选择你的业务类型"
            android:textColor="@color/title_bg"
            android:textSize="20sp" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/rl_title_identity"
            android:background="@color/text_hint" />

        <RelativeLayout
            android:id="@+id/rl_tongcheng_business"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/view1"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_select_tongcheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/select_edit_identity_hovery" />

            <TextView
                android:id="@+id/tv_tongcheng_business"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/iv_select_tongcheng"
                android:gravity="center_vertical"
                android:text="同城业务"
                android:textColor="@color/text_gray2"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/rl_tongcheng_business"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:id="@+id/rl_guonei"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/view2"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_select_guonei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/select_edit_identity" />

            <TextView
                android:id="@+id/tv_guonei_business"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/iv_select_guonei"
                android:gravity="center_vertical"
                android:text="国内业务"
                android:textColor="@color/text_gray2"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/rl_guonei"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:id="@+id/rl_guoji"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/view3"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_select_guoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/select_edit_identity" />

            <TextView
                android:id="@+id/tv_guoji_business"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/iv_select_guoji"
                android:gravity="center_vertical"
                android:text="国际业务"
                android:textColor="@color/text_gray2"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/rl_guoji"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:id="@+id/rl_other"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/view4"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_select_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/select_edit_identity" />

            <EditText
                android:id="@+id/et_other_business"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/iv_select_other"
                android:background="@drawable/shape_white"
                android:gravity="center_vertical"
                android:hint="手动输入其他业务"
                android:maxLength="10"
                android:paddingBottom="6dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="6dp"
                android:singleLine="true"
                android:textColor="@color/text_gray2"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/rl_other"
            android:background="@color/gray_line" />

        <!-- bottom -->

        <RelativeLayout
            android:id="@+id/rl_bottom_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view6"
            android:background="@drawable/selector_radius_at_bottom_gray"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textColor="@color/gray_1"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>