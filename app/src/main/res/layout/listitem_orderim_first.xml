    </LinearLayout>

    <TextView
        android:id="@+id/tv_order_use_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:drawableLeft="@drawable/print_explain_icon"
        android:drawablePadding="5dp"
        android:text="电子面单申请及使用"
