<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_orderitem_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_listitem_uploadethree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:src="@drawable/icon_ethreescan_fail" />

        <TextView
            android:id="@+id/tv_listitem_uploadethree_order"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_listitem_uploadethree_type"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_listitem_uploadethree_operate"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:src="@drawable/icon_ethree_close" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>