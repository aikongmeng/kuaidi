<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_findexpress_result_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="95dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_findexpress_result_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textColor="@color/text_gray"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_findexpress_result_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="5dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textColor="@color/text_gray" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dip" >

        <View
            android:layout_width="0.5dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#ededed" />

        <ImageView
            android:id="@+id/iv_findexpress_resultstate"
            android:layout_width="15dip"
            android:layout_height="15dip"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_result_default" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_findexpress_result_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dip"
        android:layout_weight="1"
        android:lineSpacingExtra="5dip"
        android:textColor="@color/text_gray" />

</LinearLayout>