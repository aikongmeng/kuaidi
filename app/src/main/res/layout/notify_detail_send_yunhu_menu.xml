<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_5"
            android:orientation="vertical" >

            <!-- 菜单标题 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/ivCloseMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/close" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="云呼设置"
                    android:textColor="@color/gray_1"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_4" />
            
            <!-- 批量导入手机号 -->

            <RelativeLayout
                android:id="@+id/rlOneKeyImportPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_white_item_clickcolor"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="批量导入手机号码"
                    android:textColor="@color/gray_1"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_4" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray_4" />
            
            <LinearLayout 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@color/white" >
                
                
            

            <!-- 定时发短信部分 -->

            <RelativeLayout
                android:id="@+id/rl_sendTime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_white_item_clickcolor"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/tv_sendTime_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="定时发送"
                    android:textColor="@color/gray_1"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/finish_outside_jiantou_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray_4" />

            <RelativeLayout
                android:id="@+id/rl_yunhu_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_white_item_clickcolor"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="去电显示号码设置"
                    android:textColor="@color/gray_1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_yunhu_setting_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_toLeftOf="@+id/iv_jiantou"
                    android:layout_toStartOf="@+id/iv_jiantou"
                    android:textColor="@color/text_hint"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/finish_outside_jiantou_right" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_4" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray_4" />
            <!-- 失败自动补发短信 -->

            <RelativeLayout
                android:id="@+id/rlAutoSendMsg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_white_item_clickcolor"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/tvAutoSendMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="失败自动补发短信"
                    android:textColor="@color/gray_1"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvModelTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxEms="8"
                        android:singleLine="true"
                        android:text="请选择短信模板"
                        android:textColor="@color/gray_2"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/finish_outside_jiantou_right" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="云呼发送失败时，自动给客户发送一条短信"
                android:textColor="@color/gray_3"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray_4" />
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_white_item_clickcolor"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="客户接听云呼允许接收短信"
                    android:textColor="@color/gray_1"
                    android:textSize="16sp" />
                

                <ImageView
                    android:id="@+id/cb_gun_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/icon_push_open" />
            </RelativeLayout>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_4" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="客户在接听云呼时，按数字9可接收一条短信通知"
                android:textColor="@color/gray_3"
                android:textSize="12sp" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:background="@color/gray_4" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                
            <RelativeLayout
                android:id="@+id/rlSendCloudVoice"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_white_item_clickcolor"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="重呼今日未接"
                    android:textColor="@color/gray_1"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray_4" />

            <RelativeLayout
                android:id="@+id/rlSendMsg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_white_item_clickcolor"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="短信今日未接"
                    android:textColor="@color/gray_1"
                    android:textSize="16sp" />
            </RelativeLayout>
             </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>