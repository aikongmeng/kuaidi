<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_5"
    android:orientation="vertical"
    tools:context="com.kuaibao.skuaidi.personal.personinfo.CompleteUserInfoActivity">
    <include layout="@layout/comm_title"/>
    <LinearLayout
        android:id="@+id/ll_warn_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF3BB"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingEnd="0dp"
        android:paddingLeft="15dp"
        android:paddingRight="0dp"
        android:paddingStart="15dp"
        android:paddingTop="12dp">
        <TextView
            android:id="@+id/tv_count_record_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/icon_jinggao"
            android:text="@string/complete_userinfo_warn_des"
            android:textColor="@color/gray_1"
            android:textSize="12sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_4"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/selector_white_item_clickcolor"
        android:gravity="center_vertical"
        android:layout_height="49dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="姓名"
            android:textColor="@color/gray_2"
            android:textSize="15sp"
            android:id="@+id/textView5"/>

        <EditText
            android:id="@+id/et_real_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="17"
            android:maxLines="1"
            android:singleLine="true"
            android:background="@null"
            android:textColorHint="@color/gray_3"
            android:textSize="14sp"
            android:paddingTop="10dp"
            android:gravity="right"
            android:paddingBottom="10dp"
            android:hint="真实姓名"
            android:textColor="@color/gray_1"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_4"/>
        <RelativeLayout
            android:id="@+id/rl_choose_shop_name"
            android:layout_width="match_parent"
            android:background="@drawable/selector_white_item_clickcolor"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:layout_height="49dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="快递公司"
                android:textColor="@color/gray_2"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/iv_jiantou1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/finish_outside_jiantou_right"/>
            <TextView
                android:id="@+id/tv_select_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/iv_jiantou1"
                android:layout_marginRight="15dp"
                android:textColorHint="@color/gray_3"
                android:textSize="15sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:hint="请选择"
                android:textColor="@color/gray_1"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@color/gray_4"/>
        <RelativeLayout
            android:id="@+id/rl_choose_area"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:background="@drawable/selector_white_item_clickcolor"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:layout_height="49dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="所在地区"
                android:textColor="@color/gray_2"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/iv_jiantou2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/finish_outside_jiantou_right"/>
            <TextView
                android:id="@+id/tv_select_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/iv_jiantou2"
                android:layout_marginRight="15dp"
                android:textColorHint="@color/gray_3"
                android:textSize="15sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:hint="请选择"
                android:textColor="@color/gray_1"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@color/gray_4"/>
        <RelativeLayout
            android:id="@+id/rl_choose_wangdian"
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/selector_white_item_clickcolor"
            android:gravity="center_vertical"
            android:layout_height="49dp">
            <TextView
                android:id="@+id/tv_wangdiantitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="网点名称"
                android:textColor="@color/gray_2"
                android:textSize="15sp"/>
            <RelativeLayout
                android:id="@+id/ll_select_wangdian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_wangdiantitle"
                android:layout_marginLeft="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_select_wangdian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColorHint="@color/gray_3"
                    android:textSize="15sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/gray_1"
                    android:hint="请选择"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_wangdian_jiantou"/>
                <ImageView
                    android:id="@+id/iv_wangdian_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/finish_outside_jiantou_right"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/et_select_wangdian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="17"
                android:textColorHint="@color/gray_3"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:maxLines="1"
                android:singleLine="true"
                android:visibility="gone"
                android:background="@null"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/gray_1"
                android:hint="请填写网点名称"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_4"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <Button
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/selector_base_green_reg_zt"
            android:padding="10dp"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>


</LinearLayout>
