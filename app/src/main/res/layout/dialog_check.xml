<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/window_is_show_mengban"
    android:orientation="vertical"
    android:paddingTop="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white"
            android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
        
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/shape_dialog_up"
            android:orientation="vertical" >

           

                <TextView
                    android:id="@+id/dialog_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="单号重复"
                    android:textColor="@color/sto_main_color"
                    android:textSize="20sp" />
            <TextView
                android:id="@+id/dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="是否上传重复的单号？"
                android:textColor="@color/gray_2"
                android:textSize="16sp" />

        </LinearLayout>
<View android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/gray_4"
    />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/selector_shape_bottom_left_white_blue"
                android:onClick="cancle"
                android:text="取消"
                android:textColor="@color/gray_1"
                android:textSize="16sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/gray_4" />

            <Button
                android:id="@+id/btn_do"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/selector_shape_bottom_right_white_blue"
                android:gravity="center"
                android:text="继续上传"
                android:textColor="@color/gray_1"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>